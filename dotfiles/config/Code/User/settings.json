{
  // Disable emmet for certain filetype
  "emmet.excludeLanguages": [
    ".js",
    ".md",
    ".css"
  ],
  "emmet.includeLanguages": {
    "markdown": "html"
  },
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "[css]": {
    "editor.foldingStrategy": "indentation",
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "search.useIgnoreFiles": false,
  "prettier.disableLanguages": [
    "yaml",
    "yml",
    "toml",
    "md"
  ],
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Editing
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.fontFamily": "IBM Plex Mono, Operator Mono, Operator Mono",
  "editor.tabSize": 2,
  "editor.fontSize": 18.3,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "editor.cursorWidth": 3,
    // Rulers and word wrap
  "editor.rulers": [72, 79, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.wordBasedSuggestions": true,
  "editor.hover.enabled": false,
  "[markdown]":{
      "editor.wordWrap": "wordWrapColumn",
      "editor.wordWrapColumn": 80,
      "files.trimTrailingWhitespace": false
  },
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.tokenColorCustomizations": {},
  "editor.parameterHints.enabled": false,
  "editor.scrollBeyondLastLine": true,
  "editor.renderLineHighlight": "none",
  "editor.cursorBlinking": "expand",
  // For prettier
  "editor.renameOnType": true,
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  // Terminal
  "terminal.integrated.fontsize": 18,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  // Auto Save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "git.enabled": true,
  "[svg]": {
    "editor.tabSize": 2
  },
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.settings.editor": "ui",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.limit.value": 5,
  // Theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Community Material Theme High Contrast",
  "workbench.colorCustomizations": {
    "[Community Material Theme High Contrast]": {
      "editor.wordHighlightBackground": "#1f2d30",
      "editor.wordHighlightBorder": "#1f2d30",
      "editor.wordHighlightStrongBackground": "#1f2d30",
      "editor.wordHighlightStrongBorder": "#1f2d30",
      "editorBracketMatch.border": "#1f2d30",
      "editorBracketMatch.background": "#1f2d30",
      "scrollbarSlider.background": "#ffffff22",
      "editorOverviewRuler.bracketMatchForeground": "#0000",
      "editorOverviewRuler.errorForeground": "#0000",
      "editorOverviewRuler.warningForeground": "#0000",
      "editorOverviewRuler.infoForeground": "#0000",
      "editor.background": "#141e20"
    }
  },
  "breadcrumbs.enabled": true,
  "markdown-preview-enhanced.liveUpdate": true,
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 0,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "html.format.enable": false,
  "files.trimTrailingWhitespace": true,
}